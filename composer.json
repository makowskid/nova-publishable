{
    "name": "creode/nova-publishable",
    "description": "Utilises the Publishable Package, to create a new published field for the module.",
    "keywords": [
        "laravel",
        "nova"
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "pawelmysior/laravel-publishable": "^2.0|^3.0|^4.0",
        "laravel/nova": "^4.0|^5.0",
        "illuminate/database": "^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "Creode\\NovaPublishable\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Creode\\NovaPublishable\\FieldServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "orchestra/canvas": "^8.11"
    }
}
